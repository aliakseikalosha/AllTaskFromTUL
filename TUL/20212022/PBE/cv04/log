sudo usermod -a -G users frantisek.gabor

2

User_Alias updaters = ales.buda, cecilie.dubova
User_Alias killers = bretislav.cirkl, emil.fert
User_Alias powerusers = daniel.elis, frantisek.gabor


%updaters    ALL = NOPASSWD: /usr/bin/apt-get update
%killers    ALL = NOPASSWD: /user/bin/kill

sudo -lU alse.buda
sudo -lU brestislav.cirkl
sudo -lU cecilie.dudova
sudo -lU daniel.elis
sudo -lU frantisek.gabor
